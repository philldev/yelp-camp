<%- include("../partials/header") %>
<div class="container mt-2">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d31911.802755206758!2d124.78970140115378!3d1.1778129016341523!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x32874696c144ac71%3A0x4030bfbcaf78850!2sTompaso%2C%20Minahasa%20Regency%2C%20North%20Sulawesi!5e0!3m2!1sen!2sid!4v1588548148686!5m2!1sen!2sid" width="90%" height="300px" frameborder="0" style="margin: 20px auto;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card">
        <img class="card-img-top" src="<%= campground.image %>" alt="">
        <div class="card-body">
          <h5 class="card-title"><%= campground.name %></h5>
          <span class="float-right">$<%= campground.cost %>/night</span>
          <p class="card-text"><%= campground.description %></p>
          <p>
            <em>Submited by: <a href="/users/<%= campground.author.id%>"><%= campground.author.username %></a>, <%= moment(campground.createdAt).fromNow() %></em>
          </p>
          <% if(currentUser && campground.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin) { %> 
          <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
          <form id="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post">
            <button  class="btn btn-xs btn-danger">Delete</button>
          </form>
          <% } %> 
        </div>
      </div>
      <div class="text-right my-2">
        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>/comments/new">Leave a review</a>
      </div>
      <div class="card card-body mt-2">
        <p>Reviews :</p>
        <% campground.comments.forEach(comment => { %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author.username%></strong>            
              <span class="float-right"><%= moment(comment.createdAt).fromNow() %></span>
              <p><%=comment.text%></p>
              <% if(currentUser && comment.author.id.equals(currentUser._id)|| currentUser && currentUser.isAdmin) { %> 
              <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit</a>
              <form id="delete-form" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id%>?_method=DELETE" method="POST">
                <button class="btn btn-xs btn-danger">Delete</button>
              </form>
              <% } %> 
            </div>
          </div>          
        <% }) %>
      </div>
    </div>
  </div>
  <!-- title -->
  <!-- content -->
  
  <!-- comments -->
  
</div>
<%- include("../partials/footer") %>