<%- include("../partials/header") %>
    <%- include("../partials/form-head") %>
        <h2 class="text-center mb-5">Add Camps</h2>
        <form class="text-left"  action="/campgrounds" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="img" name="image" placeholder="Image url" required>
            </div>
            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">$</div>
                </div>
                    <input type="number" class="form-control" name="cost" id="cost" placeholder="Cost" min="0.01" step="0.01" required>
              </div>
            <div class="form-group">
                <textarea class="form-control" id="desc" rows="3" name="description" placeholder="Description"></textarea>
            </div>
            <button class="btn btn-primary btn-inline">Add</button><a href="/campgrounds" class="float-right text-secondary">go back</a>
        </form>
        
    <%- include("../partials/form-foot") %>
